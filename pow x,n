class Solution {
public:
    double myPow(double x, int n) {
        if(n==0 || x==1 )return 1;
        if(n<0){
            x=1/x;
            n++;
            n*=-1;
            return x*myPow(x,n);
        }
        if(n%2==0){
            double t = myPow(x , n/2);
            return t*t;
        }      
        double t = myPow(x , n-1);
        return t*x;
    }
};
